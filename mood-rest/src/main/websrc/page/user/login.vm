#extends("/page/layout/front.vm")

#block("content")

<div class="c-login">
  <div class="am-u-lg-8 am-u-lg-centered am-u-md-10 am-u-md-centered am-u-sm-12 am-u-sm-centered">
    <div class="login-form">
      <form action="" id="jsForm">
        <div class="form-title">
          <h3>账户登录</h3>
        </div>
        <div class="group">
          <input name="mobile" id="username" type="text" placeholder="手机号/邮箱">
        </div>
        <div class="group">
          <input name="pwd" type="password" id="pwd" placeholder="密码">
        </div>
        <div class="check">
          <p><input type="checkbox" id="che"><label for="che" style="font-size: 16px;">记住我</label></p>
          <a href="/reset">忘记密码</a>
        </div>
        <div class="btn">
          <button onclick="login()">去登录？</button >
          <a href="/register">立即注册</a>
        </div>
      </form>
    </div>
  </div>
</div>

#script()
require(['login']);
#end







#end## end of body
#end






